<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/layout_width_168dp"
              android:layout_height="@dimen/layout_height_144dp"
              android:background="@drawable/round_corner_shape_light">

    <TextView android:id="@+id/grid_item_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/layout_margin_4dp"
              android:layout_marginLeft="@dimen/layout_margin_4dp"
              android:layout_marginRight="@dimen/layout_margin_4dp"
              android:gravity="center"
              android:textColor="@color/text"
              android:textSize="@dimen/text_size_12sp"
              android:singleLine="true"
              android:ellipsize="none">
    </TextView>

    <!-- TODO: scale -->
    <ImageView android:id="@+id/grid_item_cover"
               android:contentDescription="@null"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="@dimen/layout_margin_4dp"
               android:scaleType="centerCrop"
               android:background="@color/white">
    </ImageView>

</LinearLayout>