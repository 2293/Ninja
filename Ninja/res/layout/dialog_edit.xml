<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <EditText android:id="@+id/dialog_edit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/layout_height_36dp"
              android:layout_marginTop="@dimen/layout_margin_12dp"
              android:layout_marginBottom="@dimen/layout_margin_12dp"
              android:layout_marginLeft="@dimen/layout_margin_20dp"
              android:layout_marginRight="@dimen/layout_margin_20dp"
              android:layout_gravity="center"
              android:gravity="top|left"
              android:hint="@string/list_edit_hint"
              android:textColor="@color/text"
              android:textColorHint="@color/hint"
              android:textCursorDrawable="@null"
              android:textSize="@dimen/text_size_16sp"
              android:imeOptions="actionDone|flagNoExtractUi"
              android:inputType="text"
              android:background="@color/white">
    </EditText>

</LinearLayout>