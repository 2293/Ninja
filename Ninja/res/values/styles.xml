<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BrowserActivityTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="SettingActivityTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="WhitelistActivityTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_out</item>
    </style>

</resources>