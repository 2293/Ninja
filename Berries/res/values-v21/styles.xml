<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BrowserActivityTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:colorPrimary">@color/blue_500</item>
        <item name="android:colorPrimaryDark">@color/blue_700</item>
        <item name="android:colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_300</item>
    </style>

    <style name="SettingActivityTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorAccent">@color/blue_500</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:alertDialogTheme">@style/SettingActivityTheme.AlertDialogTheme</item>
    </style>
    <style name="SettingActivityTheme.AlertDialogTheme" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/blue_500</item>
    </style>

</resources>